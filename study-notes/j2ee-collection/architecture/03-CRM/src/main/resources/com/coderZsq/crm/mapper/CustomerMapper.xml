<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.coderZsq.crm.mapper.CustomerMapper">

    <resultMap type="com.coderZsq.crm.domain.Customer" id="CustomerMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="age" column="age" jdbcType="INTEGER"/>
        <result property="gender" column="gender" jdbcType="INTEGER"/>
        <result property="tel" column="tel" jdbcType="VARCHAR"/>
        <result property="qq" column="qq" jdbcType="VARCHAR"/>
        <result property="inputTime" column="input_time" jdbcType="TIMESTAMP"/>
        <result property="status" column="status" jdbcType="INTEGER"/>

        <association property="job" javaType="com.coderZsq.crm.domain.SystemDictionaryItem" columnPrefix="job_">
            <result property="id" column="id"/>
            <result property="title" column="title"/>
        </association>
        <association property="source" javaType="com.coderZsq.crm.domain.SystemDictionaryItem" columnPrefix="source_">
            <result property="id" column="id"/>
            <result property="title" column="title"/>
        </association>

        <association property="seller" javaType="com.coderZsq.crm.domain.Employee" columnPrefix="seller_">
            <result property="id" column="id"/>
            <result property="name" column="name"/>
        </association>

        <association property="inputUser" javaType="com.coderZsq.crm.domain.Employee" columnPrefix="inputUser_">
            <result property="id" column="id"/>
            <result property="name" column="name"/>
        </association>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CustomerMap">
        select id,
               name,
               age,
               gender,
               tel,
               qq,
               job_id,
               source_id,
               seller_id,
               inputUser_id,
               input_time,
               status
        from customer
        where id = #{id}
    </select>

    <!--查询所有列表数据-->
    <select id="queryAll" resultMap="CustomerMap">
        select id,
               name,
               age,
               gender,
               tel,
               qq,
               job_id,
               source_id,
               seller_id,
               inputUser_id,
               input_time,
               status
        from customer
    </select>

    <!--查询指定条件的数据-->
    <select id="query" resultMap="CustomerMap">
        SELECT c.id,
        c.NAME,
        c.age,
        c.gender,
        c.tel,
        c.qq,
        c.job_id,
        c.source_id,
        c.seller_id,
        c.inputUser_id,
        c.input_time,
        c.STATUS,
        job.title job_title,
        source.title source_title,
        seller.name seller_name,
        inputUser.name inputUser_name
        FROM customer c
        LEFT JOIN systemdictionaryitem job on c.job_id = job.id
        LEFT JOIN systemdictionaryitem source on c.source_id = source.id
        LEFT JOIN employee seller on c.seller_id = seller.id
        LEFT JOIN employee inputUser on c.inputUser_id = inputUser.id
        <where>
            <if test="status>-1">
                and c.STATUS=#{status}
            </if>
            <if test="sellerId>0">
                and c.seller_id=#{sellerId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into customer(name, age, gender, tel, qq, job_id, source_id, seller_id, inputUser_id, input_time,
                                   status)
        values (#{name}, #{age}, #{gender}, #{tel}, #{qq}, #{jobId}, #{sourceId}, #{sellerId}, #{inputuserId},
                #{inputTime}, #{status})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update customer
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="gender != null">
                gender = #{gender},
            </if>
            <if test="tel != null and tel != ''">
                tel = #{tel},
            </if>
            <if test="qq != null and qq != ''">
                qq = #{qq},
            </if>
            <if test="jobId != null">
                job_id = #{jobId},
            </if>
            <if test="sourceId != null">
                source_id = #{sourceId},
            </if>
            <if test="sellerId != null">
                seller_id = #{sellerId},
            </if>
            <if test="inputUserId != null">
                inputUser_id = #{inputUserId},
            </if>
            <if test="inputTime != null">
                input_time = #{inputTime},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from customer
        where id = #{id}
    </delete>
</mapper>