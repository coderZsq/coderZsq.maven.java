<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <!--国际化资源文件-->
    <constant name="struts.custom.i18n.resources" value="uploadMsg"/>

    <package name="uploadpkg" extends="struts-default" namespace="/upload">
        <!--注册拦截器-->
        <interceptors>
            <!--定义拦截器栈-->
            <interceptor-stack name="myStack">
                <!--注册多个拦截器-->
                <interceptor-ref name="fileUpload">
                    <!--设置允许上传的文件拓展名-->
                    <param name="allowedExtension">png,jpeg,jpg,gif</param>
                    <!--设置允许上传的单个文件大小-->
                    <param name="maximumSize">1048576</param>
                </interceptor-ref>
                <interceptor-ref name="defaultStack"/>
            </interceptor-stack>
        </interceptors>

        <!--引用拦截器栈-->
        <default-interceptor-ref name="myStack"/>

        <action name="upload" class="com.coderZsq.upload.UploadAction">
            <result name="input">/views/upload/input</result>
        </action>
    </package>

</struts>
