<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.ui.theme" value="simple"/>
    <package name="default" extends="struts-default" namespace="/">

        <interceptors>
            <interceptor name="checkLogin" class="com.coderZsq.example.web.interceptor.CheckLoginInterceptor"/>
            <interceptor-stack name="myStack">
                <interceptor-ref name="checkLogin"/>
                <interceptor-ref name="paramsPrepareParamsStack"/>
            </interceptor-stack>
        </interceptors>



        <!-- 当前package默认的拦截器 -->
        <default-interceptor-ref name="myStack"/>

        <global-results>
            <result name="login">/index.jsp</result>
        </global-results>

        <action name="login" class="com.coderZsq.example.web.action.LoginAction">
            <interceptor-ref name="paramsPrepareParamsStack"/>
            <result name="success" type="redirectAction">employee</result>
        </action>

        <action name="employee_*" class="com.coderZsq.example.web.action.EmployeeAction" method="{1}">
            <result type="redirectAction">
                <param name="actionName">employee</param>
                <param name="queryObject.currentPage">${queryObject.currentPage}</param>
            </result>
            <result name="list">/WEB-INF/views/employee_list.jsp</result>
            <result name="input">/WEB-INF/views/employee_input.jsp</result>
        </action>
    </package>

</struts>
