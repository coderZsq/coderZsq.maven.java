<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <!--每一个Action元素-->
    <!--action元素: 表示每一个Action对象-->
    <!--name属性:   请求该Action对象的资源名称-->
    <!--class属性:  该Action对象的全限定名称-->
    <!--method属性: 当前请求Action类中的某一个方法-->
    <action name="employee" class="com.coderZsq.EmployeeAction" method="execute">
        <!--结果视图-->
        <!--result元素: 表示action请求之后的结果视图-->
        <!--name属性: action方法返回的逻辑视图名称-->
        <!--type属性: 视图跳转方式(请求转发/URL重定向)-->
        <!--文本内容: 结果视图的物理路径-->
        <result name="list" type="dispatcher">/WEB-INF/views/employee/list.jsp</result>
        <result name="input" type="redirect">/WEB-INF/views/employee/input.jsp</result>
    </action>
    <action name="department" class="com.coderZsq.DepartmentAction" method="execute"/>
</actions>